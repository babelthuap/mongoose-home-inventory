doctype html
html(lang="en")
  head
    title Home
    link(href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="bower_components/font-awesome/css/font-awesome.min.css", rel="stylesheet")
    link(rel="stylesheet", href="css/style.css")
  body
    .container
      br
      .jumbotron
        center#header
          h1 Home Inventory
          em
            | by 
            a(href="https://babelthuap.github.io/") Nicholas Neumann-Chun
        hr
        #rooms
          each room in rooms
            .row.room(data-mongoid= room._id)
              h3
                i.fa.fa-trash-o
                span &nbsp;&nbsp;&nbsp;&nbsp;
                span.roomName= room.name
                span &nbsp;
                i.arrow.fa.fa-caret-up
              .items
                table.table
                  thead
                    th Item
                    th Value
                    th Description
                    th Remove
                  tbody
                    each item in room.items
                      tr(data-mongoid= item._id)
                        td= item.name 
                        td= '$' + (+item.value).toFixed(2)
                        td= item.description
                        td: button.btn.btn-default.fa.fa-times.remove-item
                    tr
                      td: input.newName(type="text")
                      td: input.newValue(type="text")
                      td: input.newDescription(type="text")
                      td
                button.addItem.btn.btn-danger Add Item
        center
          input#newRoomName(type="text")
          br
          button#addRoom.btn.btn-lg.btn-danger Add New Room
    script(src='bower_components/jquery/dist/jquery.min.js')
    script(src="js/main.js")